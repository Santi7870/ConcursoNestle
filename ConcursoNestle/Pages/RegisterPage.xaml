<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcursoNestle.Pages.RegisterPage"
             Title="Registro">
    <VerticalStackLayout Spacing="25" Padding="30,50,30,30">
        <Entry Placeholder="Nombre" x:Name="nameEntry"/>
        <Entry Placeholder="Apellido" x:Name="surnameEntry"/>
        <Entry Placeholder="Correo" Keyboard="Email" x:Name="emailEntry"/>
        <Entry Placeholder="Clave" IsPassword="True" x:Name="passwordEntry"/>
        <Button Text="Registrarse" Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>
</ContentPage>
